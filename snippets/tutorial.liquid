{% comment %} {% assign myNewNumber = myNumber | times: 5 %}
{% assign myNewNumber = myNumber | divided_by: 5 %} {% endcomment %}

{% assign myNewNumber = myNumber | plus: 0 %}

{{ myNewNumber }}
{% if myNewNumber > 5 %}
  <p>my Number is greater than 5</p>
{% endif %}

{% assign moduloOfMyNumber = myNewNumber | modulo: 2 %}
{% if moduloOfMyNumber == 0 %}
  <p>Even</p>
{% else %}
  <p>Odd</p>
{% endif %}

{% assign myAbsNumber = -11 | abs %}
<p>{{ myAbsNumber }}</p>

{% assign myRoundedNumber = 10.5 | floor %}
<p>{{ myRoundedNumber }}</p>

{% assign myCappedValue = 100 %}
<p>{{ myCappedValue | at_most: 80 }}</p>

{% assign myCappedValue = 60 %}
