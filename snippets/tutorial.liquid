{% for product in collection.products %}
  <p
    style="
      {% if forloop.first %}
      color: green
      {% elsif forloop.last %}
      color: orange
      {% endif %}
    "
  >
    {{ forloop.index0 }} - {{ product.title }}
  </p>
  <ul>
    {% for tag in product.tags %}
      <li>{{ tag }}</li>
    {% endfor %}
  </ul>
{% endfor %}
